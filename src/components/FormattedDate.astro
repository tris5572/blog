---
const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    // date.toLocaleDateString('ja-jp', {
    //   year: 'numeric',
    //   month: 'short',
    //   day: 'numeric',
    // })
    `${date.getFullYear()}/${(date.getMonth() + 1)
      .toString()
      .padStart(2, '0')}/${date.getDate().toString().padStart(2, '0')}
`
  }
</time>
