---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { href } from '../scripts/util';
---

<header>
  <h2>
    <a href={href('/')}>{SITE_TITLE}</a>
  </h2>
  <nav>
    <HeaderLink href={href('/blog')}>Blog</HeaderLink>
    <HeaderLink href={href('/about')}>About</HeaderLink>
    <HeaderLink href={href('/project')}>Project</HeaderLink>
    <HeaderLink href="https://twitter.com/tris_pef" target="_blank">
      Twitter
    </HeaderLink>
    <HeaderLink href="https://github.com/tris5572" target="_blank">
      GitHub
    </HeaderLink>
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
    background: hsla(0, 53%, 77%, 0.8);
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    text-align: center;
  }
  h2 {
    margin: 0 1em 0 0;
    font-family: 'Economica';
    font-weight: 700;
    font-style: italic;
    font-size: xx-large;
    display: inline-block;
  }
  h2 > a {
    color: inherit;
    text-decoration: none;
  }
  nav {
    display: inline-block;
  }
</style>
