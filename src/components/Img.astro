---
// ブログ記事から、サイト内に存在する画像を表示するためのコンポーネント。
// ブログ記事を mdx として保存し、以下のように指定する。
//   import Img from '../../components/Img.astro';
//   <Img src="/images/gravel.jpg" alt="グラベルの画像" />
import { href } from '../scripts/util';

export interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<img src={href(src)} alt={alt} />
