  a {
    color: inherit;
    text-decoration: inherit;
  }
  .container {
    margin: 0.4em 0;
    padding: 0.1em 0.5em;
    border: 1px solid hsl(0, 10%, 80%);
    border-radius: 4px;
  }
  .title {
    display: inline-block;
